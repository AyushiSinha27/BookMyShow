@model Movie_Entity.Booking


<div>
    <a asp-controller="Booking" asp-action="Index">Booking</a>

</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking</h2><hr />
    <div class="form-group">
        <label>Show Id</label>
        <input type="text" asp-for="ShowId" class="form-control"
               placeholder="enter Show Id" required />
    </div>
    <div class="form-group">
        <label>User Id</label>
        <input type="text" asp-for="uid" class="form-control"
               placeholder="enter User Id" required />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input type="text" asp-for="status" class="form-control"
               placeholder="enter status" required />
    </div>
    <div class="form-group">
        <label>Seat</label>
        <input type="text" asp-for="seat" class="form-control"
               placeholder="enter seat" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>


