@model Movie_Entity.Theater;

<div>
    <a asp-controller="Theater" asp-action="Index">Index</a>

</div>

<form method="post" enctype="multipart/form-data">
    <h2>Theater Entry</h2><hr />

    <h2>Theater Entry</h2><hr />
    <div class="form-group">
        <label>Theater ID</label>
        <input type="text" asp-for="Id" class="form-control"
               placeholder="enter Theater id" required />
    </div>
    <div class="form-group">
        <label>Theater Name</label>
        <input type="text" asp-for="Name" class="form-control"
               placeholder="enter Theater name" required />
    </div>
    <div class="form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="Address" class="form-control"
               placeholder="enter Address" required />
    </div>

    <input type="submit" value="Delete" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>
