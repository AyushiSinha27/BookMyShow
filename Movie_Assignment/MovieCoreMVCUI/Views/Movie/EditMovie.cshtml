
@model Movie_Entity.Movie

<h1>Edit Movie</h1>
<div>
    <hr />
    <a asp-controller="Movie" asp-action="Index">Index</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Movie Entry</h2><hr />
    <div class="form-group">
        <label>Movie Id</label>
        <input type="text" asp-for="Id" class="form-control"
               placeholder="enter movie id" required />
    </div>
    <div class="form-group">
        <label>Movie Name</label>
        <input type="text" asp-for="Name" class="form-control"
               placeholder="enter movie name" required />
    </div>
    <div class="form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="MovieType" class="form-control"
               placeholder="enter movie type" required />
    </div>
    <div class="form-group">
        <label>Movie Description</label>
        <input type="text" asp-for="MoviesDesc" class="form-control"
               placeholder="enter movie description" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>




